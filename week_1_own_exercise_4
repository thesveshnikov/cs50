#include <cs50.h>
#include <stdio.h>

int main(void)
{
    float number = get_float("Send a number: ");
    
    if (number == 0)
    {
        printf("The number is equal to zero\n");
    }
    else if (number > 0)
    {
        printf("The number is positive\n");
    }
    else
    {
        printf("The number is negative\n");
    }
}
